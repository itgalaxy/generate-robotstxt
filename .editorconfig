# editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

[*.xml]
insert_final_newline = false

[*.json]
insert_final_newline = false

[*.txt]
insert_final_newline = false
